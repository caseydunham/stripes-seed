<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    <property name="current_session_context_class">thread</property>
    <property name="connection.driver_class">org.sqlite.JDBC</property>
    <property name="connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
    <!-- issue with sqlite3 db, need to make this an absolute path to the seed.db file -->
    <property name="connection.url">jdbc:sqlite:temp.db</property>
    <property name="connection.username"></property>
    <property name="connection.password"></property>
    <property name="jdbc.batch_size">0</property>
    <property name="jdbc.batch_versioned_data">false</property>
    <property name="transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
    <property name="dialect">net.caseydunham.seed.hibernate.SQLiteDialect</property>
    <property name="cache.provider_class">net.sf.ehcache.hibernate.SingletonEhCacheProvider</property>
    <property name="cache.use_second_level_cache">false</property>
    <property name="cache.use_query_cache">false</property>
    <property name="max_fetch_depth">1</property>
    <property name="default_batch_fetch_size">8</property>
    <property name="hibernate.c3p0.max_size">1</property>
    <property name="hibernate.c3p0.min_size">0</property>
    <property name="hibernate.c3p0.acquire_increment">1</property>
    <property name="hbm2ddl.auto">update</property>

    <!-- Class Mappings -->
    <mapping class="net.caseydunham.seed.model.Example"/>
  </session-factory>

</hibernate-configuration>